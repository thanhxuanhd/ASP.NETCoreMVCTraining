@using ASPNETCoreMVCTraining.ViewModels
@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Employee Page";
}
<div class="">
    <h2>Employee</h2>
    <div class="flex float-end">
        <a class="btn btn-primary" asp-area="" asp-controller="Employee" asp-action="Create">Create</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Employee Name</th>
                <th>Dept</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <th colspan="4" class="text-center">No Data.</th>
                </tr>
            }
            else
            {
                @foreach (var employee in Model)
                {
                    <tr>
                        <th>@employee.Id</th>
                        <th>@employee.Name</th>
                        <th>@employee.Department</th>
                        <th>
                            <a class="" asp-area="" asp-controller="Employee" asp-action="Edit"
                                asp-route-id="@employee.Id">Edit</a>
                            <a class="" href="#">Delete</a>
                        </th>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>