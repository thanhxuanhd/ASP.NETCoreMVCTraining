@using ASPNETCoreMVCTraining.ViewModels
@model EmployeeCreateEditViewModel
@{
    string title = Model.Id.HasValue ? "Employee Edit Page" : "Employee Create Page";
    ViewData["Title"] = title;
}

<div class="row">
    <div class="col-md-8 m-auto">
        <div class="card">
            <div class="card-body">
                <form asp-validation-summary="ModelOnly">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    <div class="mb-3">
                        <label for="Name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="Email" asp-for="Email" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="DeptId" class="form-label">Department</label>
                        <select asp-for="DeptId" asp-items="Model.Departments" class="form-select"></select>
                        <span asp-validation-for="DeptId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="DateOfBirth" class="form-label">Date Of Birth</label>
                        <input type="date" class="form-control" id="DateOfBirth" asp-for="DateOfBirth" placeholder="">
                    </div>

                    <div class="mb-3">
                        <label for="PhotoPath" class="form-label">Photo Path</label>
                        <input type="text" class="form-control" id="Email" asp-for="PhotoPath" placeholder="">
                    </div>

                    <div class="mb-3">
                        @if (Model.Id.HasValue)
                        {
                            <button class="btn btn-primary">Edit</button>
                        }
                        else
                        {
                            <button class="btn btn-primary">Create</button>
                        }
                        <a class="btn btn-light" asp-area="" asp-controller="Employee" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}